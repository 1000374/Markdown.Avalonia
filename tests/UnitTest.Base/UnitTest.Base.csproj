<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\UnitTest.props" />

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Apps\App.axaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup Condition="'$(AvaloniaVersion)'==''">
    <PackageReference Include="Avalonia" Version="$(DefaultAvaloniaVersion)" />
    <PackageReference Include="Avalonia.Desktop" Version="$(DefaultAvaloniaVersion)" />
  </ItemGroup>

  <ItemGroup Condition="'$(AvaloniaVersion)'!=''">
    <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.Desktop" Version="$(AvaloniaVersion)" />
  </ItemGroup>

</Project>
