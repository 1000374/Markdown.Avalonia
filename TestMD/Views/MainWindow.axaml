<Window
    x:Class="TestMD.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestMD;assembly=TestMD"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
    xmlns:mde="https://github.com/whistyun/Markdown.Avalonia.SyntaxHigh"
    xmlns:vm="using:TestMD.ViewModels"
    Title="TestMD"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <TabControl
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            VerticalAlignment="Stretch">

            <TabItem
                Grid.Row="0"
                Grid.Column="0"
                Header="Source">

                <TextBox
                    VerticalAlignment="Stretch"
                    AcceptsReturn="True"
                    Text="{Binding Text}"
                    TextWrapping="Wrap" />

            </TabItem>

            <TabItem Header="Style">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Markdown Style" />

                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{Binding Styles}"
                        SelectedItem="{Binding SelectedStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="1"
                        Padding="1"
                        BorderBrush="{DynamicResource ThemeBorderHighBrush}"
                        BorderThickness="1">

                        <DockPanel LastChildFill="True">
                            <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                                <TextBlock DockPanel.Dock="Left">Append Styles</TextBlock>
                                <Button
                                    Command="{Binding TryParse}"
                                    Content="Parse"
                                    DockPanel.Dock="Right" />
                            </DockPanel>

                            <Expander
                                DockPanel.Dock="Bottom"
                                Header="Error"
                                IsExpanded="True">
                                <TextBlock Foreground="Red" Text="{Binding ErrorInfo}" />
                            </Expander>
                            <TextBox
                                AcceptsReturn="True"
                                Text="{Binding EdittingStyleXamlText}"
                                TextWrapping="NoWrap" />
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>

        <Label
            x:Name="Breadcrumb"
            Grid.Row="0"
            Grid.Column="1"
            BorderThickness="0,0,0,1"
            Content=" " />

        <md:MarkdownScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Stretch"
            local:DynamicStyleBehavior.ValidationResult="{Binding XamlParseResult}"
            local:DynamicStyleBehavior.XamlText="{Binding AppendStyleXamlText}"
            HeaderScrolled="HeaderScrolled"
            Markdown="{Binding Text}"
            MarkdownStyleName="{Binding SelectedStyle.Name}"
            SaveScrollValueWhenContentUpdated="True">
            <md:MarkdownScrollViewer.Plugins>
                <md:MdAvPlugins>
                    <mde:SyntaxHighlight>
                        <mde:Alias Name="peg" XSHD="avares://TestMD/Assets/Pegasus-Mode.xshd" />
                    </mde:SyntaxHighlight>
                </md:MdAvPlugins>
            </md:MarkdownScrollViewer.Plugins>

        </md:MarkdownScrollViewer>
    </Grid>


</Window>
