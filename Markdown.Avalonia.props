<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition=" '$(OS)' == 'Windows_NT' ">
    <PackageTargetFrameworks>netcoreapp2.0;net461;netstandard2.0</PackageTargetFrameworks>
    <DemoAppTargetFrameworks>netcoreapp3.1;net461;netcoreapp2.0</DemoAppTargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(OS)' != 'Windows_NT' ">
    <PackageTargetFrameworks>netcoreapp2.0;netstandard2.0</PackageTargetFrameworks>
    <DemoAppTargetFrameworks>netcoreapp3.1;netcoreapp2.0</DemoAppTargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <RestoreSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.avaloniaui.net/repository/avalonia-nightly/index.json;
    </RestoreSources>
    <AvaloniaVersion>0.10.999-*</AvaloniaVersion>
	<AvaloniaEditVersion>0.10.0</AvaloniaEditVersion>
    <DemoAvaloniaVersion>0.10.999-*</DemoAvaloniaVersion>
  </PropertyGroup>

  <PropertyGroup>
    <TestTargetFrameworks>netcoreapp3.1</TestTargetFrameworks>
    <TestAvaloniaVersion>0.10.999-*</TestAvaloniaVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageVersion>0.10.999</PackageVersion>
  </PropertyGroup>

</Project>


